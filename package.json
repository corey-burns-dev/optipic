{
  "name": "image-mage",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build --webpack",
    "check": "bun run lint && bun run typecheck",
    "build:worker": "opennextjs-cloudflare build",
    "deploy": "wrangler deploy",
    "biome": "biome check .",
    "biome:fix": "biome format . --write",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format:check": "prettier . --check",
    "format": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@opennextjs/cloudflare": "^1.16.2",
    "@tailwindcss/postcss": "^4",
    "@types/archiver": "^7.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-plugin-better-tailwindcss": "^4.1.1",
    "eslint-plugin-tailwind-canonical-classes": "^1.1.0",
    "lefthook": "^2.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.62.0"
  },
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
